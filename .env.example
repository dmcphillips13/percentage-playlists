# For production with the Express server (not exposed to client)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SOUNDCLOUD_CLIENT_ID=your_soundcloud_client_id
SOUNDCLOUD_CLIENT_SECRET=your_soundcloud_client_secret

# For development with React dev server (will be exposed in client-side code)
# These are needed when running npm run dev
REACT_APP_SPOTIFY_CLIENT_ID=your_spotify_client_id
REACT_APP_SOUNDCLOUD_CLIENT_ID=your_soundcloud_client_id
REACT_APP_SOUNDCLOUD_CLIENT_SECRET=your_soundcloud_client_secret

# Optional port for the server (defaults to 3001)
PORT=3001